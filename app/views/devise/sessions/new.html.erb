<div class="card text-bg-light mb-3" style="max-width: 30rem;">
  <div class="card-header"><h4>Log in</h4></div>
  <div class="card-body">
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class:"form-label" %><br />
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Login", data: {turbo: false}, class: "btn btn-primary mb-2" %>
      </div>
    <% end %>

    <p class="card-text">
      <%= render "devise/shared/links" %>
    </p>

  </div>
</div>
